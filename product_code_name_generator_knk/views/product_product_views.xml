<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_normal_form_view_inherit_knk">
        <field name="name">product.normal.form.view.inherit.knk</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <button type="object" string="Generate Product Code" name="get_product_code" icon="fa-cubes" />
            </field>
        </field>
    </record>
    <record id="product_product_tree_view_inherit_knk" model="ir.ui.view">
        <field name="name">product.product.tree.view.inherit.knk</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <header position="inside">
                <button type="object" string="Generate Product Code" name="get_product_code" icon="fa-cubes"/>
            </header>
        </field>
    </record>
</odoo>