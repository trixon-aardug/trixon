<?xml version="1.0"?>
<odoo>
    <data>

        <record id="sale_order_wizard_view" model="ir.ui.view">
            <field name="name">Show Sale Order Details</field>
            <field name="model">sale.order.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="x_aa_tx_purchase_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="x_aa_tx_partner_id"/>
                        </group>
                    </group>
                    <sheet>
                        <notebook>
                            <page name="polines" string="Lines">
                                <field name="x_aa_tx_order_line" options="{'no_open': True, 'no_create': True}">
                                    <tree string="Order Lines">
                                        <field name="x_aa_tx_product_id"/>
                                        <field name="x_aa_tx_serial"/>
                                        <field name="x_aa_tx_product_qty"/>
                                        <field name="x_aa_tx_po_line_id" invisible="1"/>
                                    </tree>
                                </field> 
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Create" name="update_pol" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="update_sale_order_action" model="ir.actions.act_window">
            <field name="name">Create Sale Order</field>
            <field name="res_model">sale.order.wizard</field>
            <field name="target">new</field>
            <field name="view_id" ref="sale_order_wizard_view"/>
            <field name="view_mode">form</field>
        </record>

        <record id="purchase_order_inherited_view_update_po_line" model="ir.ui.view">
            <field name="name">Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="%(update_sale_order_action)d" 
                    string="Create SO"
                    type="action" 
                    class="btn-primary"
                    context="{'default_x_aa_tx_purchase_id': id}"/>
                </header>
            </field>
        </record>

    </data>
</odoo>
