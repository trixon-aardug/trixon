<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_order_form_add_vendor_details" model="ir.ui.view">
            <field name="name">sale.order.add.vendor.details</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="x_aa_tx_purchase_id"/>
                    <field name="x_aa_tx_vendor_id"/>
                </field>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="view_purchase_order" type="object" class="oe_stat_button" icon="fa-suitcase" attrs="{'invisible': [('x_aa_tx_purchase_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <field name="x_aa_tx_purchase_count" class="o_stat_value"/>
                            <span class="o_stat_text">PO</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
