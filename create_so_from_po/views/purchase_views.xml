<?xml version="1.0"?>
<odoo>
    <data>
        <record id="purchase_order_form_add_sale_details" model="ir.ui.view">
            <field name="name">purchase.order.form.sale.details</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="view_sale_order" type="object" class="oe_stat_button" icon="fa-usd" attrs="{'invisible': [('x_aa_tx_sale_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <field name="x_aa_tx_sale_count" class="o_stat_value"/>
                            <span class="o_stat_text">SO</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//sheet/notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="x_aa_tx_sale_reference_no"/>
                </xpath>


                <xpath expr="//sheet/notebook/page[@name='purchase_delivery_invoice']" position="after">
                    <page name='sale_details' string='Sales Order Details'>
                        <group>
                            <field name="x_aa_tx_sale_id" mode="tree">
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
