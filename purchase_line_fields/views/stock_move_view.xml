<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_purchase_line_fields" model="ir.ui.view">
            <field name="name">stock.picking.form.po.line.fields</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="x_aa_tx_grade"/>
                    <field name="x_aa_tx_battery_condition"/>
                    <field name="x_aa_tx_note"/>
                </xpath>
            </field>
        </record>

        <record id="product_normal_form_view_fields" model="ir.ui.view">
            <field name="name">product.product.form.fields</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="x_aa_tx_grade" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>