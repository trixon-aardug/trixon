<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_purchase_line_fields" model="ir.ui.view">
            <field name="name">purchase.order.form.add.line.fields</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="x_aa_tx_tag_ids" optional="show"/>
                    <field name="x_aa_tx_booked" optional="show"/>
                    <field name="x_aa_tx_sku" optional="show"/>
                    <field name="x_aa_tx_identifier" optional="show"/>
                </xpath>
                <xpath expr="//sheet/notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="x_aa_tx_serial" optional="show"/>
                    <field name="x_aa_tx_grade" optional="show"/>
                    <field name="x_aa_tx_battery_condition" optional="show"/>
                    <field name="x_aa_tx_note" optional="show"/>
                    <field name="x_aa_tx_name" optional="show"/>
                    <field name="x_aa_tx_brand_id" options="{'no_create': True}" optional="show"/>
                    <field name="x_aa_tx_model_id" options="{'no_create': True}" optional="show"/>
                    <field name="x_aa_tx_storage_id" options="{'no_create': True}" optional="show"/>
                    <field name="x_aa_tx_extern_id" optional="show"/>
                    <field name="x_aa_tx_intern_id" optional="show"/>
                    <field name="x_aa_tx_imei" optional="show"/>
                    <field name="x_aa_tx_graphics_card" optional="show"/>
                    <field name="x_aa_tx_memory" optional="show"/>
                    <field name="x_aa_tx_keyboard" optional="show"/>
                    <field name="x_aa_tx_colour" optional="show"/>
                    <field name="x_aa_tx_other_remarks" optional="show"/>
                </xpath>
                <xpath expr="//sheet/notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="x_aa_tx_is_sold" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
