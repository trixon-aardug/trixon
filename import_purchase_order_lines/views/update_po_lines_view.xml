<?xml version="1.0"?>
<odoo>
	<data>

		<record id="po_order_update_wizard_view" model="ir.ui.view">
			<field name="name">Update Purchase Order Lines</field>
			<field name="model">update.po.line.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
					    <field name="import_option" widget="radio"/>
						<field name="purchase_order_file"/>
					</group>
					<group>
				        <field name="import_prod_option" widget='radio'/>
				    </group>
					<group>
				        <field name="product_details_option" widget='radio'/>
				    </group>
				    <group>
	                  <group string="Download Sample XLS and CSV Files">
	                      <field name="down_samp_file" widget="checkbox" />
	                      <field name="sample_option" widget="radio" attrs="{'invisible': [('down_samp_file', '=', False)]}"/>
	                      <button name="download_auto_update" string="Download Sample File" type="object" class="oe_highlight" attrs="{'invisible': [('down_samp_file', '=', False)]}"/>
	                  </group>
		            </group>
				    
					<footer>
						<button string="Update" name="update_pol" class="oe_highlight" type="object"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="update_po_line_action" model="ir.actions.act_window">
			<field name="name">Update Purchase Order Lines</field>
			<field name="res_model">update.po.line.wizard</field>
			<field name="target">new</field>
			<field name="view_id" ref="po_order_update_wizard_view"/>
			<field name="view_mode">form</field>
		</record>

		<record id="purchase_order_inherited_view_update_po_line" model="ir.ui.view">
			<field name="name">Purchase Order</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<header>
					<button name="%(update_po_line_action)d" 
					string="Update Purchase Order Lines"
                    type="action" 
                    class="btn-primary"/>
				</header>
			</field>
		</record>

	</data>
</odoo>
